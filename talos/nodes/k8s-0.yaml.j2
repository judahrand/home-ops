---
machine:
  type: controlplane
  network:
    hostname: k8s-0
    interfaces:
      - interface: bond0
        bond:
          interfaces:
              - enp2s0
              - enp3s0
          mode: active-backup
        vlans:
          - vlanId: 60
            dhcp: false
            mtu: 1500
          - vlanId: 70
            dhcp: false
            mtu: 1500
        dhcp: true
        dhcpOptions:
          routeMetric: 1024
  install:
    diskSelector:
      model: WD_BLACK SN770 1TB
    image: factory.talos.dev/metal-installer/35c6e40584dc34915f6734eaa2f18d2f8ec37640c23b4b9c81baf87cda0ff87e:v1.11.5
    wipe: false
  nodeLabels:
    amd.feature.node.kubernetes.io/gpu: "true"
---
apiVersion: v1alpha1
kind: UserVolumeConfig
name: local-hostpath
provisioning:
  diskSelector:
    match: disk.model == "WD_BLACK SN770 1TB"
  minSize: 750GB
